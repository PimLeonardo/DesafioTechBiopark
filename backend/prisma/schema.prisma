generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
}

model Edificio {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  createdAt DateTime @default(now())

  Apartamento Apartamento[]

  @@map("edificios")
}

model Apartamento {
  id         Int     @id @default(autoincrement())
  numero     Int     @unique
  aluguel    String
  locatario  String
  locador    String
  disponivel Boolean

  edificio    Edificio @relation(fields: [id_edificio], references: [id])
  id_edificio Int

  Locatario Locatario?

  @@map("apartamentos")
}

model Locatario {
  id   Int    @id @default(autoincrement())
  nome String
  cpf  String @unique

  apartament     Apartamento @relation(fields: [id_apartamento], references: [id])
  id_apartamento Int         @unique

  @@map("locatario")
}
