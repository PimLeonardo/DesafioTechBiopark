generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
}

model User {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String

  Edificio Edificio[]

  @@map("users")
}

model Edificio {
  id           String @id @default(uuid())
  nome         String
  apartamentos Int

  users   User   @relation(fields: [id_user], references: [id])
  id_user String

  Apartamento Apartamento[]

  @@map("edificios")
}

model Apartamento {
  id         String  @id @default(uuid())
  numero     Int
  aluguel    Int
  locatario  String
  locador    String
  disponivel Boolean

  edificio    Edificio @relation(fields: [id_edificio], references: [id])
  id_edificio String

  Locatario Locatario?

  @@map("apartamentos")
}

model Locatario {
  id   String @id @default(uuid())
  nome String
  cpf  Int    @unique

  apartament     Apartamento @relation(fields: [id_apartamento], references: [id])
  id_apartamento String      @unique

  @@map("locatarios")
}
